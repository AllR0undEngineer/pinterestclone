<%include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800  px-4 py-5 text-white ">
    <h1>create new post </h1>
    <hr class="opacity-10 mt-5">
    <form action="/createpost" method="post" enctype="multipart/form-data">
        <input class="block w-1/3  text-black  mt-2 2 px-8 py-3 " type="file" name="postimage">
        <input class="block w-1/3  text-black  mt-2 border-2 px-8 py-3 rounded-md" type="text"  placeholder="title" name="title">
        <input class="block w-1/3 h-40 text-black  mt-2 border-2 px-8 py-3 rounded-md " type="text"  placeholder="description" name="description">
        <input class="block w-1/3  text-black  mt-2 border-2 bg-red-600 rounded-md " type="submit" value="Create Post">
    </form>
</div>

